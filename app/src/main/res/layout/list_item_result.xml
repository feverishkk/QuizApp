<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question Text"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#dbeceb"
        android:foregroundTint="#009688"
        android:orientation="vertical"
        android:padding="15dp">


        <RadioButton
            android:id="@+id/result_list_radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:padding="10dp"
            android:textColor="@android:color/primary_text_light"
            android:buttonTint="#009688"/>

        <RadioButton
            android:id="@+id/result_list_radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:padding="10dp"
            android:textColor="@android:color/primary_text_light"
            android:buttonTint="#009688"/>

        <RadioButton
            android:id="@+id/result_list_radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:padding="10dp"
            android:textColor="@android:color/primary_text_light"
            android:buttonTint="#009688"/>

        <RadioButton
            android:id="@+id/result_list_radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:padding="10dp"
            android:textColor="@android:color/primary_text_light"
            android:buttonTint="#009688"/>
    </RadioGroup>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="Answer Text" />


</LinearLayout>